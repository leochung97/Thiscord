<!DOCTYPE html>
<html>
  <head>
    <title>Thiscord | Your Place to Talk and Hang Out</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <% if current_user %>
      window.currentUser = {
        "id": <%= current_user.id %>,
        "username": "<%= current_user.username %>",
        "email": "<%= current_user.email %>"
      }
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
